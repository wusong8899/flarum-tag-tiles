{
  "name": "@wusong8899/flarum-tag-tiles",
  "version": "1.0.0",
  "private": true,
  "description": "Convert tag tiles to advanced swiper-based layout with social media integration and comprehensive autoplay controls",
  "keywords": [
    "flarum",
    "extension",
    "tags",
    "tiles",
    "swiper",
    "autoplay",
    "carousel"
  ],
  "dependencies": {
    "swiper": "^11.2.10"
  },
  "devDependencies": {
    "@types/jquery": "^3.5.32",
    "@types/node": "^24.0.0",
    "flarum-tsconfig": "^1.0.0",
    "flarum-webpack-config": "^2.0.0",
    "oxlint": "^1.11.2",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.2",
    "vite-plugin-oxlint": "^1.4.0"
  },
  "scripts": {
    "dev": "vite -c vite.config.admin.mts build --watch --mode development",
    "dev:forum": "vite -c vite.config.forum.mts build --watch --mode development",
    "build": "vite -c vite.config.admin.mts build --mode production && vite -c vite.config.forum.mts build --mode production",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}